{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["type-declarations/**/*.d.ts", "src/**/*"],
  "exclude": [
    "**/*.test.*",
    "**/*.story.*",
    "**/*.stories.*",
    "src/stories.ts",
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/__fixtures__/*",
    "src/helpers/testing/"
  ]
}
