{
	"name": "@freud-ds/react-native",
	"title": "React Native Freud Design System",
	"version": "0.0.0-semantic-release",
	"description": "This is the implementation of Freud DS for React Native",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"source": "src/index",
	"files": [
		"README.md",
		"dist",
		"android",
		"ios",
		"react-native-freud-ds.podspec",
		"!android/build",
		"!ios/build",
		"!android/.gradle",
		"!**/.idea",
		"!**/__tests__",
		"!**/__fixtures__",
		"!**/__mocks__"
	],
	"scripts": {
		"start": "tsc -w & tsc-alias -w",
		"dev": "node ./scripts/run-dev.js",
		"clean": "tsc --build --clean && rm -rf ./dist",
		"build": "yarn clean && tsc -p tsconfig.release.json && tsc-alias -p tsconfig.release.json",
		"build:preview:ios": "cd preview && yarn ios && cd ../",
		"build:preview:android": "cd preview && yarn android && cd ../",
		"build:preview:android:develop": "cd preview && yarn android -- --variant=releaseDevelop && cd ../",
		"test": "jest",
		"test:coverage": "jest --config=./jest-ci.config.js --colors",
		"lint": "run-s lint:typescript lint:code",
		"lint:code": "eslint \"**/*.{js,jsx,ts,tsx}\"",
		"lint:typescript": "tsc --noEmit -p tsconfig.json",
		"lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
		"prepare": "is-ci || husky install",
		"prepublishOnly": "yarn build",
		"semantic-release": "semantic-release",
		"preview": "yarn --cwd preview",
		"pods": "cd preview && npx pod-install --quiet",
		"bootstrap": "yarn build && cd preview && yarn && npx react-native-asset && pod-install --quiet && cd ../",
		"generate-docs": "./scripts/generate-docs/run.sh"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/Zenklub/freud-ds-mobile.git",
		"baseUrl": "https://github.com/Zenklub/freud-ds-mobile.git"
	},
	"keywords": [
		"react-native",
		"ios",
		"android",
		"freud-ds",
		"design system"
	],
	"homepage": "https://github.com/Zenklub/freud-ds-mobile.git#readme",
	"license": "MIT",
	"licenseFilename": "LICENSE",
	"peerDependencies": {
		"@freud-ds/icons": "*",
		"@freud-ds/tokens": "*",
		"@gorhom/portal": "^1.0.14",
		"@react-native-picker/picker": "^2.4.10",
		"react": ">=18.2.0",
		"react-native": ">=0.72.15 <1.0.x",
		"react-native-gesture-handler": "2.1.0",
		"react-native-reanimated": "^1.13.4",
		"react-native-safe-area-context": "^3.3.2",
		"react-native-svg": "12.4.3"
	},
	"devDependencies": {
		"@babel/core": "^7.21.0",
		"@babel/plugin-external-helpers": "^7.14.5",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-transform-typescript": "^7.15.0",
		"@babel/runtime": "^7.21.0",
		"@commitlint/cli": "^13.2.0",
		"@commitlint/config-conventional": "^13.2.0",
		"@react-native-picker/picker": "^2.4.10",
		"@release-it/conventional-changelog": "^3.3.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.0.4",
		"@semantic-release/npm": "^10.0.4",
		"@semantic-release/release-notes-generator": "^11.0.4",
		"@storybook/addon-links": "^6.3.8",
		"@storybook/react-native": "^5.3.25",
		"@testing-library/jest-native": "^5.4.3",
		"@testing-library/react-hooks": "^8.0.0",
		"@testing-library/react-native": "^12.8.1",
		"@types/jest": "^24.0.24",
		"@types/node": "^16.9.6",
		"@types/react": "^17.0.24",
		"@types/react-dom": "^17.0.9",
		"@types/react-native": "^0.68.12",
		"@types/react-test-renderer": "^18.0.0",
		"@types/tinycolor2": "^1.4.6",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"babel-jest": "^26.6.3",
		"babel-loader": "^8.2.2",
		"babel-plugin-module-resolver": "^4.1.0",
		"babel-plugin-transform-remove-console": "^6.9.4",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"husky": "^8.0.0",
		"is-ci": "^3.0.0",
		"jest": "^26.6.3",
		"metro-react-native-babel-preset": "^0.67.0",
		"nodemon": "^2.0.12",
		"npm-run-all": "^4.1.5",
		"patch-package": "^6.5.1",
		"pod-install": "^0.1.27",
		"prettier": "^2.4.1",
		"react": "17.0.2",
		"react-native": "0.68.1",
		"react-native-gesture-handler": "2.1.0",
		"react-native-safe-area-context": "^3.3.2",
		"react-native-svg": "12.4.3",
		"react-test-renderer": "17.0.2",
		"semantic-release": "^21.0.7",
		"semantic-release-slack-bot": "^4.0.2",
		"ts-jest": "^27.0.4",
		"ts-node": "^10.8.1",
		"tsc-alias": "^1.3.9",
		"tsc-watch": "^4.5.0",
		"typescript": "^4.4.4"
	},
	"importSort": {
		".ts, .tsx": {
			"style": "module",
			"parser": "typescript"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@freud-ds/icons": "*",
		"@freud-ds/tokens": "*",
		"@gorhom/portal": "*",
		"react-native-reanimated": "1.13.4",
		"tinycolor2": "^1.6.0"
	},
	"bugs": {
		"url": "https://github.com/Zenklub/freud-ds-mobile/issues"
	},
	"engines": {
		"npm": "use-yarn",
		"node": ">=18.0.0 <19.0.0"
	},
	"directories": {
		"doc": "docs"
	},
	"author": "Zenklub"
}
